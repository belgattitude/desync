{
  "name": "desync-project",
  "private": true,
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "dev": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "build": "lerna run build",
    "typecheck": "lerna run typecheck --stream --parallel",
    "lint": "lerna run lint --stream",
    "fix:staged": "lerna run fix:staged",
    "deduplicate": "yarn-deduplicate yarn.lock",
    "coverage:publish": "codecov && lerna run coverage:publish -- -f coverage/clover.xml"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "lerna": "^3.20.2",
    "release": "^6.1.0",
    "typescript": "^3.7.5",
    "yarn-deduplicate": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream fix:staged",
      "pre-push": "lerna run typecheck && lerna run test:unit"
    }
  },
  "engines": {
    "node": ">=10.13",
    "yarn": ">=1.19.0 <2.0.0",
    "npm": "please-use-yarn"
  }
}
