{
  "name": "@desync/core",
  "description": "Deal with async.",
  "version": "1.1.0",
  "license": "MIT",
  "homepage": "https://github.com/belgattitude/desync",
  "repository": "belgattitude/desync",
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "keywords": [
    "async",
    "promise",
    "react",
    "hooks"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/core.umd.production.js",
  "module": "dist/core.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "start": "cross-env NODE_ENV=development tsdx watch",
    "build": "cross-env NODE_ENV=production tsdx build --tsconfig tsconfig.build.json --format=cjs,esm,umd",
    "build:microbundle": "microbundle --jsx React.createElement --tsconfig tsconfig.build.json",
    "clean": "rimraf --no-glob ./dist ./build ./cross-env",
    "test": "run-p test:*",
    "test:unit": "jest --config jest.config.js --color",
    "test:unit:coverage": "jest --config jest.config.js --color --coverage",
    "prepublish": "run-s build",
    "typecheck": "tsc --project ./tsconfig.build.json --noEmit",
    "lint": "run-p lint:code",
    "lint:code": "eslint . --ext .ts,.tsx,.js,.jsx",
    "fix:staged": "lint-staged --allow-empty",
    "fix:all": "run-p fix:all:*",
    "fix:all:code": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "coverage:publish": "codecov --root=../../ -F usePromise",
    "deps:check": "npx npm-check-updates --dep prod,dev,optional",
    "deps:update": "npx npm-check-updates --dep prod,dev,optional -u"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yaml,json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@desync/result": "1.1.0",
    "@desync/use-deep-compare-memoize": "1.1.0",
    "@desync/use-promise": "1.1.0"
  },
  "peerDependencies": {
    "@types/react": ">= 16.8.6",
    "react": "^16.8.0 || ^17.0.1",
    "react-dom": "^16.8.0 || ^17.0.1"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/fetch-mock": "^7.3.3",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-import": "^1.13.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "es-check": "^5.2.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "fetch-mock": "^9.11.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "microbundle": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=10.13"
  }
}
