{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true
    },
    "bootstrap": {
      "npmClient": "yarn"
    },
    "run": {
      "npmClient": "yarn"
    },
    "publish": {
      "npmClient": "npm",
      "access": "public",
      "allowBranch": [
        "master",
        "canary"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
